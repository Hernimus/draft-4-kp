{
  "name": "web-katalog",
  "version": "1.0.0",
  "description": "Web catalog for books using Node.js and Express",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "set PORT=5000 && nodemon app.js",
    "client": "set PORT=3000 && npm start --prefix client",
    "client-build": "npm run build --prefix client",
    "dev-all": "concurrently \"npm run dev\" \"npm run client\""
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "sqlite3": "^5.1.6"
  },
  "keywords": [
    "catalog",
    "books",
    "express",
    "sqlite"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10"
  }
}
